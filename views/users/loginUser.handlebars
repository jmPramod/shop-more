<section id='loginPage'>
  <img src='../images/login1.png' alt='' class='loginImage' />
  <div class='loginFormContainer'>

    <h1>Log In</h1>
    <form
      class='loginForm'
      action='/login/'
      method='post'
      {{! enctype="multipart/form-data" }}
    >
      <div class='loginInput'>

        <input type='text' name='email' placeholder='Email' required />

        <input
          type='password'
          name='password'
          placeholder='Password'
          required
        />
      </div>

      <button class='loginButton'>Submit</button>
      <div class='demoCredential'>

        <h6> Email: <b> test@test.com</b> </h6>

        <h6> Password: <b>test@123</b></h6>

      </div>
    </form>
  </div>
</section>